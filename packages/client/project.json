{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "packages/client/src",
  "i18n": {
    "sourceLocale": "en",
    "locales": {
      "fr": "packages/client/src/locales/messages.fr.json",
      "sp": "packages/client/src/locales/messages.sp.json"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "docs",
        "i18nMissingTranslation": "warning",
        "localize": ["fr", "sp"],
        "index": "packages/client/src/index.html",
        "main": "packages/client/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "packages/client/tsconfig.app.json",
        "assets": [
          "packages/client/src/favicon.ico",
          "packages/client/src/assets",
          "packages/client/src/manifest.webmanifest"
        ],
        "styles": ["packages/client/src/styles.scss"],
        "scripts": [],
        "serviceWorker": true,
        "ngswConfigPath": "packages/client/ngsw-config.json",
        "webWorkerTsConfig": "packages/client/tsconfig.worker.json"
      },
      "configurations": {
        "fr": {
          "localize": ["fr"]
        },
        "sp": {
          "localize": ["sp"]
        },
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "client:build:production"
        },
        "development": {
          "browserTarget": "client:build:development"
        },
        "en": {
          "browserTarget": "client:build:development,en"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "client:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/client/**/*.ts",
          "packages/client/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/client/jest.config.ts",
        "passWithNoTests": true,
        "webWorkerTsConfig": "packages/client/tsconfig.worker.json"
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "client:build"
      }
    }
  }
}
